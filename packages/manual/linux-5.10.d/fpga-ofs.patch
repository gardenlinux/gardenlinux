++#define PLL_N_LOW_ADDR			0x102
++
++#define PLL_M_HIGH_ADDR			0x104
++#define PLL_M_BYPASS_EN_ADDR		0x105
++#define PLL_M_EVEN_DUTY_EN_ADDR		0x106
++#define PLL_M_LOW_ADDR			0x107
++
