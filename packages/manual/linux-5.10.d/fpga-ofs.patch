++	if (!name || !strlen(name)) {
++		dev_err(dev, "Attempt to register with no name!\n");
++		return NULL;
++	}
++
++	smgr = kzalloc(sizeof(*smgr), GFP_KERNEL);
++	if (!smgr)
++		return NULL;
++
++	id = ida_simple_get(&fpga_sec_mgr_ida, 0, 0, GFP_KERNEL);
++	if (id < 0)
++		goto error_kfree;
