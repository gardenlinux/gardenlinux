++	struct eth_com *mac = edev->mac;
++	struct device *dev = edev->dev;
++	u32 val;
++	int ret;
++
++	ret = eth_com_read_reg(mac, PHY_CONFIG, &val);
++	if (ret) {
++		dev_err(dev, "fail to read PHY_CONFIG: %d\n", ret);
++		return ret;
