+
+diff --git a/drivers/fpga/dfl-fme-mgr.c b/drivers/fpga/dfl-fme-mgr.c
+index b3f7eee3c93f..d5861d13b306 100644
+--- a/drivers/fpga/dfl-fme-mgr.c
