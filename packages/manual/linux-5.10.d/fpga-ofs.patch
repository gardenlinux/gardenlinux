++	if (!check_reh_handler(dev, sops, bmc) ||
++	    !check_reh_handler(dev, sops, sr) ||
++	    !check_reh_handler(dev, sops, pr) ||
++	    !check_csk_handler(dev, sops, bmc) ||
++	    !check_csk_handler(dev, sops, sr) ||
++	    !check_csk_handler(dev, sops, pr)) {
++		return NULL;
++	}
