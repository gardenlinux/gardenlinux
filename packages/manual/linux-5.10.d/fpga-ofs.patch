++static u64 read_mac_stat(struct regmap *regmap, unsigned int addr)
++{
++	u32 data_l, data_h;
++
++	regmap_read(regmap, addr, &data_l);
++	regmap_read(regmap, addr + 1, &data_h);
++
++	return data_l + ((u64)data_h << 32);
++}
