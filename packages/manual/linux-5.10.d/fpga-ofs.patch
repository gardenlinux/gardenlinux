+-	.driver = {
+-		.name = DRV_NAME,
+-		.pm = NULL,
+-		.of_match_table = of_match_ptr(altera_spi_match),
+-	},
+-	.id_table	= altera_spi_ids,
+-};
+-module_platform_driver(altera_spi_driver);
+-
