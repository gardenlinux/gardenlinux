++
++	down_read(&m10bmc->bmcfw_lock);
++
++	if (m10bmc->bmcfw_state == M10BMC_FW_STATE_SEC_UPDATE)
++		ret = -EBUSY;
++	else
++		ret = m10bmc_raw_read(m10bmc, M10BMC_SYS_BASE + (offset), val);
++
++	up_read(&m10bmc->bmcfw_lock);
++
++	return ret;
++}
