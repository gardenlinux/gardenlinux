++	cp1 = FIELD_GET(CFG_PLL_CP1, cfg_pll_cp) << PLL_CP1_SHIFT;
++	bypass_en = FIELD_GET(CFG_PLL_BYPASS_EN, cfg_pll_n);
++	return iopll_write(iopll, PLL_N_BYPASS_EN_ADDR,
++			   even_duty_en | cp1 | bypass_en, (*seq)++);
++}
