+ 	.pr_reh_size = m10bmc_pr_reh_size,
++	.bmc_canceled_csk_nbits = m10bmc_csk_cancel_nbits,
++	.sr_canceled_csk_nbits = m10bmc_csk_cancel_nbits,
++	.pr_canceled_csk_nbits = m10bmc_csk_cancel_nbits,
+ };
+ 
