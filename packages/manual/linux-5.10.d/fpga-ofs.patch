++
++	even_duty_en = FIELD_GET(CFG_PLL_EVEN_DUTY_EN, cfg_pll_m) <<
++		PLL_EVEN_DUTY_EN_SHIFT;
++	return iopll_write(iopll, PLL_M_EVEN_DUTY_EN_ADDR,
++			   even_duty_en, (*seq)++);
++}
