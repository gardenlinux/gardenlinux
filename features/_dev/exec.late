#!/usr/bin/env bash

set -eufo pipefail

# GL-TESTCOV-_dev-config-user-dev-create
useradd --user-group --groups wheel --create-home dev
id dev

# GL-TESTCOV-_dev-config-user-dev-home
mkdir /home/dev/.ssh
chmod -R 700 /home/dev/.ssh
chown -R dev:dev /home/dev/.ssh
find /home/dev -printf '%M %u:%g %p\n'
