#!/usr/bin/env bash
set -Eeuo pipefail

# GL-SET-checkbox-service-nginx-unmask
# GL-SET-checkbox-service-nginx-enable
systemctl unmask nginx && systemctl enable nginx --now

# GL-SET-checkbox-config-issue
: >/etc/issue
# GL-SET-checkbox-config-issue-net
: >/etc/issue.net
# GL-SET-checkbox-config-motd
: >/etc/motd

# GL-SET-checkbox-config-issue-welcome
cat <<EOF >/etc/issue
Welcome to Garden Linux HW Testing Image

IP adresses:
IPv4: \4
IPv6: \6

Reports available at:
  http://one_of_ip_addresses_from_above/reports/

EOF

# GL-SET-checkbox-service-getty-tty1-disable
rm -rf /etc/systemd/system/getty@tty1.service.d
# GL-SET-checkbox-service-serial-getty-disable
rm -rf /etc/systemd/system/serial-getty@.service.d
