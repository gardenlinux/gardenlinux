#!/usr/bin/env bash
set -Eeuo pipefail

systemctl enable haveged
systemctl enable ipmievd

update-kernel-cmdline

mkdir -p /boot/efi/EFI/BOOT

for kernel in /boot/vmlinuz-*; do
   #legacy
   dracut\
   --force\
   --kver "${kernel#*-}"\
   --modules "bash dash systemd systemd-initrd systemd-repart kernel-modules kernel-modules-extra terminfo udev-rules dracut-systemd base fs-lib shutdown"\
   --reproducible\
   "/boot/initrd.img-${kernel#*-}"
done

rm -f /etc/dracut.conf.d/30-secureboot.conf

if [ -f "/usr/bin/syslinux" ]; then
   # bootloader
   mkdir -p /boot/efi/syslinux
   cp /usr/lib/syslinux/modules/bios/menu.c32 /boot/efi/syslinux/
   cp /usr/lib/syslinux/modules/bios/libutil.c32 /boot/efi/syslinux/

   update-syslinux
fi
