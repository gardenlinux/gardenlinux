#!/usr/bin/env bash
set -Eeuo pipefail

# GL-SET-aws-config-cloud-no-growpart
# GL-SET-aws-config-cloud-no-resizefs
# GL-SET-aws-config-cloud-no-ntp
# growpart is done in initramfs, growroot by systemd
mv /etc/cloud/cloud.cfg /etc/cloud/cloud.cfg.bak
cat /etc/cloud/cloud.cfg.bak | grep -v "^ - growpart$" | grep -v "^ - resizefs$" | grep -v "^ - ntp$" >/etc/cloud/cloud.cfg
rm /etc/cloud/cloud.cfg.bak

# GL-SET-aws-service-aws-clocksource-enable
systemctl enable aws-clocksource.service
