gardenlinux:
  base_definition:
    repo:
      name: 'GARDENLINUX'
      cfg_name: 'github_com'
    traits:
      notifications:
        default:
          on_error:
            triggering_policy: 'never'

  jobs:
    on-head-update:
      steps:
        render_pipelines_and_trigger_job:
          execute:
          - '../ci/render_pipelines_and_trigger_job'
          - --image-build
          vars:
            PROMOTE_TARGET: "'snapshot'"
            BUILD_TARGETS: "'manifest,component_descriptor'"
    build-packages:
      repo:
        trigger: false
      steps:
        render_pipelines_and_trigger_job:
          execute:
          - '../ci/render_pipelines_and_trigger_job'
          - --package-build
          vars:
            PROMOTE_TARGET: "'snapshot'"
            BUILD_TARGETS: "'manifest'"
